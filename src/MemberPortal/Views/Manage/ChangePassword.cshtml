@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout2";
}

<div class="content-header">

    <section class="content-header">
        <h1>
            @ViewData["Title"]
            <small>(Change Your Account Settings)</small>
        </h1>

        <ol class="breadcrumb">
            <li><a asp-for="" asp-controller="Profile" asp-action="Index"><i class="fa fa-dashboard"></i> Member Portal</a></li>
            <li><a asp-for="" asp-controller="Manage" asp-action="Index">Manage Account</a></li>
            <li class="active"> Change Password</li>
        </ol>
    </section>

    <!-- MAIN CONTENT-->
    <section class="content">

        <!-- Account Info -->
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body" style="min-height: 1100px;">
                        <div class="box-header"></div>
                        <div class="col-lg-6 col-sm-offset-3" style="padding-right:5%;">
                            <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal" style="padding-bottom:40px; padding-top:45%;">
                                <h4>Change Password Form</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="OldPassword" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="OldPassword" class="form-control" />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewPassword" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="NewPassword" class="form-control" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-primary btn-block">Change password</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-6">
                            <!-- Put Stuff Here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Placeholder -->
        @*<div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <div class="box-header"></div>
                    </div>
                </div>
            </div>
        </div>*@


    </section>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
