@model IndexViewModel
@using MemberPortal.Models

@{
    ViewData["Title"] = "Manage your account";
    Layout = "_Layout2";

}

<div class="content-header">

    <section class="content-header">
        <h1>
            @ViewData["Title"]
        <small>(Change Your Account Settings)</small>
    </h1>
    <p class="text-success">@ViewData["StatusMessage"]</p>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Member Portal</a></li>
        <li class="active">Manage Account</li>
    </ol>
</section>

<!-- MAIN CONTENT-->
    <section class="content">



        <!-- Account Info -->
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <div class="box-header"></div>
                        <div class="col-lg-6 col-sm-offset-3" style="padding-right:5%;">
                            <form class="form-horizontal" style="padding-bottom: 30px;">
                                <h4>Account Information</h4>
                                <hr />
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="disabledInput" placeholder="John Doe" disabled>
                                    </div>
                                    <div class="col-sm-3">
                                        <a class="btn btn-primary btn-block" style="min-width:155px;">Name Change Request</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Email</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="disabledInput" placeholder="johndoe@@local123.com" disabled>
                                    </div>
                                    <div class="col-sm-3">
                                        <a class="btn btn-primary btn-block" style="min-width:155px;">Edit Email Preferences</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Address</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="disabledInput" placeholder="123 Anytown Ln, Anyplace, NY 12345" disabled>
                                    </div>
                                    <div class="col-lg-3">
                                        <a class="btn btn-primary btn-block" style="min-width:155px;">Update Address</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Phone</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="disabledInput" placeholder="(555) 555-5555" disabled>
                                    </div>
                                    <div class="col-sm-3">
                                        <a class="btn btn-primary btn-block" style="min-width:155px;">Update Phone Number</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Password</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="disabledInput" placeholder="**********" disabled>
                                    </div>
                                    <div class="col-sm-3">
                                        <a class="btn btn-primary btn-block" style="min-width:155px;" asp-for="" asp-controller="Manage" asp-action="ChangePassword">Change Password</a>
                                    </div>
                                </div>

                            </form>
                        </div>

                        <div class="col-md-6">
                            <!-- Put Stuff Here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- UPDATE HISTORY/REQUEST STATUS -->
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body" style="height:650px;">
                        <div class="box-header"></div>
                        
                        <div style="padding-left: 20px;">
                            <h4>Update History / Request Status</h4>
                            <hr />
                        </div>
                        </div>
                    </div>
                </div>
            </div>


    </section>
</div>

